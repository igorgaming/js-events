{
    "extends": "eslint:recommended",
    "ignorePatterns": [
        "test",
        "dist",
        "types"
    ],
    "env": {
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "rules": {
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true,
            "avoidEscape": true
        }]
    }
}
